<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center mt-3">
    <div class="row">
        <div class="col-md-6  col-xl-4 " style="width: 30rem;">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1559521783-1d1599583485?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80"
                    alt="" class="car-img-top">
                <div class="card-body">
                    <h5 class="card-title">Register</h5>

                    <form action="/register" method="POST" novalidate class="validated-form">
                        <div class="form-group mb-2">
                            <label for="userName" class="form-label">UserName:</label>
                            <input type="text" class="form-control" id="userName" placeholder="UserName Here"
                                name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks Good
                            </div>
                        </div>
                        <div class="form-group mb-2">
                            <label for="email" class="form-label">UserName:</label>
                            <input type="email" class="form-control" id="email" placeholder="Email Here" name="email"
                                required>
                            <div class="valid-feedback">
                                Looks Good
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label for="Password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="Password" placeholder="Password Here"
                                name="password" required>
                            <div class="valid-feedback">
                                Looks Good
                            </div>
                        </div>
                        <div class="from-group d-grid">
                            <button class="btn btn-secondary fs-5">SignUp!</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>